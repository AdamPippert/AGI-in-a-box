# AGI-in-a-Box Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Version
# =============================================================================
VERSION=latest

# =============================================================================
# Router Configuration
# =============================================================================
ROUTER_HTTP_PORT=8080
ROUTER_GRPC_PORT=50051
LOG_LEVEL=INFO

# Topology engine settings
TOPOLOGY_APPROXIMATE=true
SINKHORN_ITERATIONS=20
MAX_RECURSION_DEPTH=5

# =============================================================================
# Model Backend
# =============================================================================
# For local Ollama
OPENAI_API_BASE=http://localhost:11434/v1
OPENAI_MODEL_NAME=mixtral

# For OpenAI API (uncomment and fill in)
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_API_KEY=sk-...

# For Anthropic API
# ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# CrewAI Agent Configuration
# =============================================================================
CREWAI_PORT=8081

# Serper API for web search (optional)
# SERPER_API_KEY=...

# =============================================================================
# Local LLM (Ollama)
# =============================================================================
OLLAMA_PORT=11434

# =============================================================================
# State Management
# =============================================================================
REDIS_PORT=6379

POSTGRES_PORT=5432
POSTGRES_USER=agi
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=agi_routing

# =============================================================================
# Message Queue (for async operations)
# =============================================================================
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672
RABBITMQ_USER=agi
RABBITMQ_PASSWORD=changeme_in_production

# =============================================================================
# Vector Database (for model memory)
# =============================================================================
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# =============================================================================
# Monitoring
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
